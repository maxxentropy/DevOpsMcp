{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AzureDevOps": {
    "OrganizationUrl": "https://dev.azure.com/your-organization",
    "PersonalAccessToken": "",
    "AuthMethod": "PersonalAccessToken",
    "TimeoutSeconds": 30,
    "MaxRetryAttempts": 3,
    "EnableCaching": true,
    "CacheExpirationMinutes": 5
  },
  "MCP": {
    "Protocol": "http",
    "ServerName": "DevOps MCP Server",
    "Version": "1.0.0"
  },
  "OpenTelemetry": {
    "ServiceName": "devops-mcp",
    "ExporterEndpoint": "http://localhost:4317"
  },
  "PersonaMemoryStore": {
    "BasePath": "/app/data/PersonaMemory",
    "MaxContextsPerPersona": 100
  },
  "Eagle": {
    "MaxConcurrentExecutions": 10,
    "MinPoolSize": 2,
    "MaxPoolSize": 10,
    "SecurityPolicy": {
      "DefaultLevel": "Standard",
      "AllowFileSystemAccess": false,
      "AllowNetworkAccess": false,
      "AllowClrReflection": false,
      "AllowedAssemblies": [],
      "RestrictedCommands": ["exec", "socket", "open"],
      "MaxExecutionTimeSeconds": 30,
      "MaxMemoryMb": 256
    }
  },
  "Email": {
    "TemplatesPath": "EmailTemplates",
    "CacheDurationMinutes": 60,
    "MaxRetryAttempts": 3,
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerDurationSeconds": 60,
    "DefaultSecurityPolicy": "Standard",
    "UseLocalSmtp": false,
    "LocalSmtpHost": "localhost",
    "LocalSmtpPort": 1025,
    "SaveToDisk": false,
    "SavePath": "sent-emails"
  },
  "AWS": {
    "SES": {
      "Region": "us-east-1",
      "FromAddress": "noreply@devops-mcp.com",
      "FromName": "DevOps MCP",
      "ConfigurationSet": "",
      "MaxSendRate": 14,
      "UseSandbox": true,
      "ReplyToAddress": null,
      "EnableDetailedLogging": false,
      "TimeoutSeconds": 30
    }
  }
}